{
    "hosting": {
        "public": "frontend/dist",
        "ignore": [
            "firebase.json",
            "**/.*",
            "**/node_modules/**"
        ],
        "rewrites": [
            {
                "source": "**",
                "destination": "/index.html"
            }
        ],
        "headers": [
            {
                "source": "**/*.@(js|css)",
                "headers": [
                    {
                        "key": "Cache-Control",
                        "value": "public, max-age=31536000, immutable"
                    }
                ]
            },
            {
                "source": "**/*.@(jpg|jpeg|png|gif|webp|svg|ico)",
                "headers": [
                    {
                        "key": "Cache-Control",
                        "value": "public, max-age=86400"
                    }
                ]
            }
        ]
    }
}